{
	"compilerOptions": {
		"jsx": "react-native", // ✅ JSX 사용 설정
		"esModuleInterop": true, // ✅ default import 허용
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noEmit": true,
		"target": "ESNext",
		"moduleResolution": "node",
		"module": "ESNext",
		"skipLibCheck": true, // ✅ 충돌되는 타입 무시
		"resolveJsonModule": true
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
